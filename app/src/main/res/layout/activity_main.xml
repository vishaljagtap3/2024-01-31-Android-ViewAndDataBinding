<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:textSize="40sp"
        android:text="View Binding Demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/img" />

    <TextView
        android:textSize="30sp"
        android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Set Info"
        android:id="@+id/btnSetInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:text="Enable Settings"
        android:id="@+id/chkSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnShowEmpDetails"
        android:text="Show Emp Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>